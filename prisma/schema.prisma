// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id          String    @id @default(cuid()) @map("_id")
  name        String
  email       String    @unique
  avatarUrl   String
  description String?
  githubUrl   String?
  linkedinUrl String?
  projects    Project[]
}

model Project {
  id          String @id @default(cuid()) @map("_id")
  title       String
  description String
  image       String
  liveSiteUrl String
  githubUrl   String
  category    String
  userEmail   String
  createdBy   User   @relation(fields: [userEmail], references: [email])
}
